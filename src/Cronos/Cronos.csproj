<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
    <TargetFrameworks>netstandard1.0;net45</TargetFrameworks>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <DocumentationFile>bin\Debug\netstandard1.0\.xml</DocumentationFile>
   
    <PackageId>Cronos</PackageId>
    <Authors>Andrey Dorokhov, Sergey Odinokov</Authors>
    <Owners>aidmsu, odinserj</Owners>
    <Summary>Cronos is free, open source library to calculate next execution time based on cron expression. Handle the transition from standard time to daylight saving time. Support non-standard characters such as L, W, #, ?.</Summary>
    <Description>Cronos is free, open source library to calculate next execution time based on cron expression comprising five or six fields. Handle the transition from standard time to daylight saving time. Support non-standard characters such as L, W, #, ?.</Description>
    <ProjectUrl>https://github.com/HangfireIO/Cronos</ProjectUrl>
    <PackageLicenseUrl>https://raw.github.com/HangfireIO/Cronos/master/LICENSE</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>https://github.com/HangfireIO/Cronos/releases</PackageReleaseNotes>
    <Copyright>Copyright © 2016-2017 Sergey Odinokov.</Copyright>
    <PackageTags>Cronos Cron Scheduler Recurring Jobs Tasks</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='netstandard1.0'">
    <PackageReference Include="System.Globalization" Version="4.0.11" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <Optimize>False</Optimize>
  </PropertyGroup>

</Project>